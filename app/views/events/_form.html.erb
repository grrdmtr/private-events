<div class="section">
  <div class="container">
  <div class="columns is-centered">

      <div class="column is-4">

      <h2 class="title is-2">New Event</h2>

      <%= simple_form_for @event do |form| %>
        <% if @event.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

            <ul>
              <% event.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <div class="control">
            <%= form.input :theme, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

         <div class="field">
          <div class="control">
            <%= form.input :description, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

         <div class="field">
          <div class="control">
            <%= form.input :date, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= form.button :submit, "Create Event", class:"button is-info is-medium" %>
          </div>
        </div>

      <% end %>
      	</div>
		</div>
	</div>
</div> 
