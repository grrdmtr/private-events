<p style="color: green"><%= notice %></p>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column">
        <h2 class="title is-4">Users Events</h2>
        <div id="events">
          <% @user.created_events.each do |event| %>
            <%= render event %>
          <% end %>
        </div>
      </div>
      <div class="column">
        <h2 class="title is-4">Attended Events (<%= @user.attended_events.count %>) </h2>
        <div id="events">
          <% @user.attended_events.each do |event| %>
            <%= render event %>
          <% end %>
        </div> 
      </div>
    </div>
  </div>
</section>  
